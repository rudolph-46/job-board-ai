{
  "apps": [
    {
      "name": "job-board-ai",
      "script": "npm",
      "args": "start",
      "cwd": "/root/job-board-ai",
      "env": {
        "NODE_ENV": "production",
        "PORT": "3333"
      },
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "max_memory_restart": "1G",
      "error_file": "/root/job-board-ai/logs/pm2-error.log",
      "out_file": "/root/job-board-ai/logs/pm2-out.log",
      "log_file": "/root/job-board-ai/logs/pm2-combined.log",
      "time": true,
      "autorestart": true,
      "max_restarts": 10,
      "min_uptime": "10s"
    }
  ]
}
